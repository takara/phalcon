{
  "main": "phalcon.php",
  "output": "phalcon.phar",
  "chmod": "0755",
  "directories": [
    "bootstrap",
    "resources",
    "scripts",
    "templates"
  ],
  "finder": [
    {
      "in": "resources",
      "name": "*.*"
    },
    {
      "in": "scripts",
      "name": "*.*"
    },
    {
      "in": "templates",
      "ignoreDotFiles": false,
      "name": [
        "*.*",
        ".htrouter.php"
      ]
    }
  ],
  "files": [
    "webtools.php",
    "LICENSE.txt"
  ],
  "git-version": "git_tag",
  "stub": true
}
